<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_form_conectividad_view_inherit" model="ir.ui.view">
        <field name="name">account.payment.form.conectividad.view.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="dni_partner" attrs="{'invisible':[('payment_type', 'not in', ['inbound','outbound'])]}"/>
                <field name="partner_banks" domain="[('partner_id','=', partner_id)]" attrs="{'invisible':[('payment_type', 'not in', ['inbound','outbound'])]}"/>
                <field name="banks_name" attrs="{'invisible':[('payment_type', 'not in', ['inbound','outbound'])]}"/>
                <field name="abba" attrs="{'invisible':[('abba', '=', False)]}"/>
                <field name="switf" attrs="{'invisible':[('abba', '=', False)]}"/>
                <field name="destination_bank_name" attrs="{'invisible':[('abba', '=', False)]}"/>
                <field name="middleware_bank_name" attrs="{'invisible':[('abba', '=', False)]}"/>
                <field name="street" attrs="{'invisible':[('abba', '=', False)]}"/>
            </field>
            <field name="journal_id" position="after">
                <field name="company_account" attrs="{'invisible':[('payment_type', 'not in', ['inbound','outbound'])]}"/>
                <field name="company_banks" attrs="{'invisible':[('payment_type', 'not in', ['inbound','outbound'])]}"/>
            </field>
            <field name="amount" position="attributes">
                <attribute name="options">{'format': 0}</attribute>
            </field>
        </field>
    </record>
</odoo>