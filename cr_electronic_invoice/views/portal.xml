<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="portal_invoice_page_inherit" name="Invoice Portal Template" inherit_id="account.portal_invoice_page"  >
            <xpath expr="//div[hasclass('o_download_pdf')]" position="after">
                <div class="row">
                    <div class="col-12">
                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="invoice.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download"/>Descargar XML</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="invoice.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download"/>Descargar Resp. MH</a>
                    </div>
                </div>
            </xpath>
        </template>
    </data>

</odoo>